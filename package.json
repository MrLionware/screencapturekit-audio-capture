{
  "name": "screencapturekit-audio-capture",
  "version": "1.3.3",
  "description": "Native Node.js addon for capturing per-application audio on macOS using ScreenCaptureKit framework. Real-time audio streaming with event-based API.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "postinstall": "npm run build:native",
    "build": "npm run build:native && npm run build:ts",
    "build:native": "node-gyp rebuild",
    "build:ts": "tsc -p tsconfig.json",
    "rebuild": "node-gyp rebuild",
    "clean": "node-gyp clean && rimraf dist",
    "test": "tsx --test 'tests/**/*.test.ts'",
    "test:unit": "tsx --test 'tests/unit/*.test.ts'",
    "test:integration": "tsx --test 'tests/integration/*.test.ts'",
    "test:edge-cases": "tsx --test 'tests/edge-cases/*.test.ts'",
    "test:watch": "tsx --test --watch 'tests/**/*.test.ts'",
    "test:readme": "bash readme_examples/run_all.sh",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:tests": "tsc --project tests/tsconfig.json"
  },
  "keywords": [
    "screencapturekit",
    "macos",
    "audio",
    "capture",
    "recording",
    "napi",
    "native",
    "addon",
    "app-audio",
    "per-app-audio",
    "audio-streaming",
    "ventura",
    "real-time",
    "pcm",
    "float32",
    "audio-monitoring",
    "screen-recording",
    "core-audio"
  ],
  "author": {
    "name": "Caleb Rubiano",
    "email": "Rubiano.lion@gmail.com",
    "url": "https://github.com/mrlionware"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrlionware/screencapturekit-audio-capture.git"
  },
  "bugs": {
    "url": "https://github.com/mrlionware/screencapturekit-audio-capture/issues"
  },
  "homepage": "https://github.com/mrlionware/screencapturekit-audio-capture#readme",
  "files": [
    "src/",
    "dist/",
    "binding.gyp",
    "index.js",
    "sdk.js",
    "index.d.ts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "node-gyp": "^10.0.0",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "gypfile": true,
  "os": [
    "darwin"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
